<h1>Task Manager</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
    <input type="checkbox" <%= task.completed == true ? 'checked' : nil %>>
    <%= link_to task.title, task_path(task) %> -
    <%= link_to 'Edit', edit_task_path(task) %> -
    <%= link_to 'Remove', task_path(task), data: { turbo_method: :delete,
                                                                            turbo_confirm: 'Are you sure you want to delete?' } %>

   </li>
  <% end %>
</ul>
